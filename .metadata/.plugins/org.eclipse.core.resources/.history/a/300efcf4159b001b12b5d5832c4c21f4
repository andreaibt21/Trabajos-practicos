int utn_menu();
int utn_ingresarNumero();
int main(void) {
	setbuf(stdout,NULL);

	utn_menu();





		return EXIT_SUCCESS;

};


int utn_menu(){
	int opcion;
	printf("MENU ");
	printf(	"\n 1. Ingresar 1er operando (A=x) ");
	printf("\n 2. Ingresar 2do operando (B=y)");
	printf("\n 3. Calcular todas las operaciones ");
	printf("\n 4. Informar resultados");
	scanf("%d", &opcion);
	while( opcion > 4 || opcion < 1){
		printf("ERROR ingrese un numero del 1 al 4 para elefir su opcion del menú \n");
			scanf("%d", &opcion);
	};
	printf("Opcion selecionada %d \n",opcion);


	switch (opcion){

		case 1:
			utn_ingresarNumero();
			break;
		case 2:
				break;
		case 3:
				break;
		case 4:
				break;


		}
	return EXIT_SUCCESS;


};



int utn_ingresarNumero(){
	int retorno;
	int numero;
	printf("     Ingrese un numero \n");
	scanf("%d", &numero);
	printf("     los numeros ingresados son %d\n", numero);

	retorno = numero;

	return retorno;
};

















