#include <stdio.h>
#include <stdlib.h>

#include "calculos.h"
int utn_getNumero(int *resultado, char *mensaje, char *mensajeError, int minimo, int maximo);

int main(void) {
	setbuf(stdout,NULL);
	int opcion;


	//utn_menu();
	utn_getNumero(&opcion, "Ingrese numero del 1 al 5 ", "Error", 1,5);

		return EXIT_SUCCESS;

};

int utn_getNumero(int *resultado, char *mensaje, char *mensajeError, int minimo, int maximo){

	int retorno = -1;
	int buffer ; //variable auxiliar;
	if (resultado != NULL  && mensaje != NULL && mensajeError != NULL && minimo <= maximo ){

		do{
		printf("%s", mensaje);
		scanf("%d", &buffer);
		if(buffer >= minimo && buffer <=maximo ){
			*resultado =buffer;
			retorno = 0;
		}else{

			printf("%s", mensajeError);
			retorno = -1;
		};
		}while(*resultado == 5);
	}
	return retorno;
};










